@model JqueryAjaxComboBoxAspNetMvcHelperDemo.Models.Product

@{
    ViewBag.Title = "Delete";
}

<h2>Delete</h2>

<h3>Are you sure you want to delete this?</h3>
<fieldset>
    <legend>Product</legend>

    <div class="display-label">Product Code</div>
    <div class="display-field">@Model.ProductCode</div>

    <div class="display-label">Product Name</div>
    <div class="display-field">@Model.ProductName</div>

    <div class="display-label">Category</div>
    <div class="display-field">@Model.Category.CategoryName</div>


</fieldset>
@using (Html.BeginForm("Delete","Product")) {
    <p>
        <input type="hidden" id="ProductId" name="ProductId" value="@Model.ProductId" />
        <input type="submit" value="Delete" /> |
        @Html.ActionLink("Back to List", "Index")
    </p>
}


