@model IEnumerable<JqueryAjaxComboBoxAspNetMvcHelperDemo.Models.Product>


<!DOCTYPE html>

<html>
<head>
    <title>Index</title>
</head>
<body>
    <p>
        @Html.ActionLink("Create New", "Input")
    </p>
    <table border=1>
        <tr>
            <th></th>
            <th>
                Product Id
            </th>
            <th>
                Product Code
            </th>
            <th>
                Product Name
            </th>
            <th>
                Category
            </th>
        </tr>
    
    @foreach (var item in Model) {
        <tr>
            <td>
                @Html.ActionLink("Edit", "InputEdit", new { id = item.ProductId }) |                
                @Html.ActionLink("Delete", "DeletePreview", new { id=item.ProductId })
            </td>
            <td>
                @item.ProductId
            </td>
            <td>
                @item.ProductCode
            </td>
            <td>
                @item.ProductName
            </td>
            <td>
                @item.Category.CategoryName
            </td>
        </tr>
    }
    
    </table>
</body>
</html>

